<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64F17B"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/login"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/activity_main_edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableRight="@drawable/email"
        android:hint="Please Enter Email..."
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/activity_main_edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Please Enter Password..."
        android:inputType="textPassword"
        android:textColor="#fff"
        android:drawableRight="@drawable/password"/>

    <Button
        android:id="@+id/activity_main_btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#F8D70C"
        android:text="LOGIN"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/activity_main_btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#285A1F"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="30sp"/>

</androidx.appcompat.widget.LinearLayoutCompat>